    ViewData["Title"] = "Privacy Policy";
}

<div class="row">
    <div class="col-lg-8 mx-auto text-center">
        <div class="section-title">
            <h1>The Legal Stuff.</h1>
            <p class="text-muted">Your Privacy, Our Priority – Protecting What Matters Most.</p>
        </div>
